@model InscriptionViewModel
@{
    ViewData["Title"] = "Inscription";
}

<body>
    <div class="container">

        <a asp-area="" asp-page="/Index" class="Button">Return</a>
        <form method="post" class="Form" id="inscriptionForm">
            <label for="login">Pseudo</label>
            <input type="text" name="login" id="login" maxlength="18" required value="@Model.Login">
            <label for="password">Mot de passe</label>
            <input type="password" name="password" id="password" required value="@Model.Password"/>
            <label for="confPassword">Confirmer le mot de passe</label>
            <input type="password" name="confPassword" id="confPassword" minlength="4" required value="@Model.RepeatedPassword" />

            <input type="submit" value="Valider" class="Button_submit" asp-controller="Home"
                   asp-route-inscription="@Model"
                   asp-action="Inscription" />
        </form>
    </div>
</body>